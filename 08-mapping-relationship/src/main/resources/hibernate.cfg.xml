<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/course_java_data_persistence?currentSchema=mapping_relationship</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">12345678</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="format_sql">true</property>

        <mapping class="by.rakovets.course.datapersistence.mapping.association.hero.entity.Hero"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.hero.entity.Inventory"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.hero.entity.Quest"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.hero.entity.Item"/>

        <mapping class="by.rakovets.course.datapersistence.mapping.association.demo.entity.Address"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.demo.entity.Employee"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.demo.entity.Meeting"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.association.demo.entity.Organization"/>
    </session-factory>
</hibernate-configuration>
