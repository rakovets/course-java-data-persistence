        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.enemy.dal.entity.InvisibleEnemyEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.enemy.dal.entity.RangedEnemyEntity"/>
    </session-factory>
</hibernate-configuration>
