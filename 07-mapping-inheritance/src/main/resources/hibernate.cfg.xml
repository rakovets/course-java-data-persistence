        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tpc.ProgrammerTpcEntity"/>

        <!-- Table Per Hierarchy Class -->
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.BaseEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.EmployeeTphEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.ManagerTphEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tph.ProgrammerTphEntity"/>

        <!-- Table Per Subclass -->
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.BaseEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.EmployeeTpsEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.ManagerTpsEntity"/>
        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.demo.dal.entity.tps.ProgrammerTpsEntity"/>

        <mapping class="by.rakovets.course.datapersistence.mapping.inheritance.enemy.dal.entity.BaseEntity"/>
