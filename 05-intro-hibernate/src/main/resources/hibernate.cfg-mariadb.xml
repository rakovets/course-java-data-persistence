<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="connection.url">jdbc:mariadb://localhost:3306/intro_hibernate</property>
        <property name="connection.username">mariadb</property>
        <property name="connection.password">1234567</property>
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="format_sql">true</property>

        <mapping class="by.rakovets.course.datapersistence.example.hibernate.dal.entity.EmployeeEntity"/>
    </session-factory>
</hibernate-configuration>
