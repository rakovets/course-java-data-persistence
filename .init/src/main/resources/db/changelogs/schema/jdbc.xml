<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="jdbc-schema-1" author="rakovets">
        <createTable schemaName="jdbc" tableName="artist">
            <column name="artist_id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="pk_artist"
                             unique="true"
                             nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(128)">
                <constraints unique="true"
                             nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="jdbc" tableName="artist" cascadeConstraints="true"/>
        </rollback>
    </changeSet>
    <changeSet id="jdbc-schema-2" author="rakovets">
        <createTable schemaName="jdbc" tableName="song">
            <column name="song_id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="pk_song"
                             unique="true"
                             nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(128)">
                <constraints unique="true"
                             nullable="false"/>
            </column>
            <column name="album" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="recorded" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="length" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="jdbc" tableName="song" cascadeConstraints="true"/>
        </rollback>
    </changeSet>
    <changeSet id="jdbc-schema-3" author="rakovets">
        <createTable schemaName="jdbc" tableName="artist_song_link">
            <column name="artist_id" type="INTEGER">
                <constraints foreignKeyName="fk_artist"
                             referencedTableSchemaName="jdbc"
                             referencedTableName="artist"
                             referencedColumnNames="artist_id"
                             nullable="false"/>
            </column>
            <column name="song_id" type="INTEGER">
                <constraints foreignKeyName="fk_song"
                             referencedTableSchemaName="jdbc"
                             referencedTableName="song"
                             referencedColumnNames="song_id"
                             nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey schemaName="jdbc" tableName="artist_song_link" columnNames="artist_id,song_id"/>

        <rollback>
            <dropTable schemaName="jdbc" tableName="artist_song_link" cascadeConstraints="true"/>
        </rollback>
    </changeSet>
    <changeSet id="jdbc-schema-4" author="rakovets">
        <createTable schemaName="jdbc" tableName="book">
            <column name="book_id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true"
                             primaryKeyName="pk_book"
                             unique="true"
                             nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="genre" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="jdbc" tableName="book" cascadeConstraints="true"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
